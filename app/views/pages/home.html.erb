<div id="map" data-mapbox-api-key="<%= ENV["MAPBOX_API_KEY"] %>" data-markers="<%= @markers.to_json %>"></div>
<div class="sidebar">
  <div id="reports" class="reports"></div>
</div>

<div style="position: absolute;top: 0; left:0;">

  <%= render "sidebar" %>
</div>


<div style="position: absolute; bottom: 0; right: 0;" class="mb-4 mr-3" >
  <%= render "alert_modal" %>
</div>

  <%#= render "describe_incident" %>
  <button type="button" class="btn btn-primary" id="reviewdestination" style="display: hidden;" data-toggle="modal" data-target="#reviewModal"></button>
