<div id="map" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
<div class="sidebar">
     <div class="heading">
          <h1>Routes</h1>
     </div>
     <div id="reports" class="reports"></div>
</div>

<div style="position: absolute;top: 0; left:0;">
  <%= render "sidebar" %>
  <%= render "describe_incident" %>
  <%= render "trip_review" %>
</div>

<div style="position: absolute; bottom: 0; right: 0;" class="mb-4 mr-4">
  <button id="alertBtn" type="button" class="btn" data-toggle="modal" data-target="#alertModal"></button>
</div>

<div class="btn-group dropup mb-4 ml-4" style="position: absolute; bottom: 0; left: 0;">
  <button type="button" class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>

  <div class="dropdown-menu border-0 bg-transparent" >
    <!-- Dropdown menu links -->
    <button id="create-alert" type="button" class="btn" data-toggle="modal" data-target="#createAlertModal"></button>
    <br>
    <button id="myLocation" class="btn"></button>
  </div>
</div>

<%= render "create_alert" %>
<%= render "alert_modal" %>
