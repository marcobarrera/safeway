<!-- Button trigger modal -->
<button type="button" class="btn btn-secondary" data-toggle="modal"  data-target="#LoginModal">
  Log In
</button>

<!-- Login Modal -->
<div class="modal fade" id="LoginModal" tabindex="-1" aria-labelledby="LoginModalLabel" aria-hidden="true">
  <div class="log-modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="login-modal-header">

        <button type="button" class="log-close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h5 class="login-modal-title" id="LoginModalLabel">Log in</h5>
         <div class="login-container text-center">
            <img class="loginicon" src="https://res.cloudinary.com/titavon/image/upload/v1615223484/gg_profile_lg81vl.png">
      </div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="log-form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="log-form-actions">
          <%= f.button :submit, "Log in", class: "log-btn btn " %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
