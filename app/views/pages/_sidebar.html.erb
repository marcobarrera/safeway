<!-- Button trigger modal -->
<button id="sidebar-button" type="button" class="btn" data-toggle="modal" data-target="#sidebarModal"></button>

<% if user_signed_in? %>

  <div class="modal fade" id="sidebarModal" tabindex="-1" aria-labelledby="sidebarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="my-header">
          <button type="button" class="btn-close btn-dark model-x" data-dismiss="modal" aria-label="Close">X</button>
        </div>
        <div class="modal-body">
         <!-- Content of the modal -->
         <h1>Welcome <%= current_user.first_name %></h1>
          <ul>
            <li><%= link_to "Contacts", contacts_path %></li>
            <li><%= link_to "Saved Places", addresses_path %></li>
            <li><%= link_to "Profile", edit_user_registration_path %></li>
            <li><%= link_to "Alerts", alerts_path %></li>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </ul>
        </div>
      </div>
    </div>
  </div>

<% else %>

  <div class="modal fade" id="sidebarModal" tabindex="-1" aria-labelledby="sidebarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="my-header">
          <button type="button" class="btn-close btn-dark model-x" data-dismiss="modal" aria-label="Close">X</button>
        </div>
        <div class="modal-body">
         <!-- Content of the modal -->
         <h1>Welcome</h1>
          <ul>
            <li><%= link_to "Contacts", contacts_path %></li>
            <li><%= link_to "Saved Places", addresses_path %></li>
            <li><%= link_to "Profile", edit_user_registration_path %></li>
            <li><%= link_to "Alerts", alerts_path %></li>
            <%= render "login" %>
            <%= render "signup" %>
          </ul>
        </div>
      </div>
    </div>
  </div>

<% end %>
