<h2>Create new Contact</h2>

<%= simple_form_for(@contact) do |f| %>
  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true%>
    <%= f.input :last_name,
                required: true,
                autofocus: true%>
    <%= f.input :phone_number,
                required: true,
                autofocus: true%>
    <%= f.input :email,
                required: true,
                autofocus: true%>
    <%= f.input :emergency_contact,
                required: true,
                autofocus: true%>
  </div>


  <div class="form-actions">
    <%= f.button :submit, "Create" %>
  </div>
<% end %>