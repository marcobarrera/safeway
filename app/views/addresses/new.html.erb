<h2>Create Address</h2>

<%= simple_form_for(@address) do |f| %>
  <div class="form-inputs">
    <%= f.input :label,
                required: true,
                autofocus: true %>
    <%= f.input :address,
                required: true,
                autofocus: true %>
  </div>


  <div class="form-actions">
    <%= f.button :submit, "Create" %>
  </div>
<% end %>